{
    "name": "vscjira",
    "displayName": "VSCJira",
    "description": "Jira actions made easy",
    "version": "0.0.1",
    "publisher": "TheOneSock",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:markdown"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands":{
            "command": "vsjira.configure",
            "title": "Configure",
            "category": "VSJira"
        },
        "configuration": {
            "type": "object",
            "title": "VSJira configuration",
            "properties": {
                "vsjira.jiraRoot": {
                    "type": "string",
                    "default": "",
                    "description": "Root jira url."
                },
                "vsjira.base46token": {
                    "type": "string",
                    "default": "",
                    "description": "Generate this by calling configure"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42",
        "@types/request": "^2.47.0"
    },
    "dependencies": {
        "request": "^2.87.0"
    }
}